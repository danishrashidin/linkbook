{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "target": "es2022",
    "module": "preserve",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
