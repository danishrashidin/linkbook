generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String
  links Link[]
  tags Tag[]

  @@map("user")
}

model Link {
  id String @id @default(uuid())
  url String
  content String
  tags Tag[]
  createdAt DateTime @default(now())
  createdBy User @relation(fields: [createdById], references: [id])
  createdById String
  @@map("link")
}

model Tag {
  id String @id @default(uuid())
  name String
  links Link[]
  createdAt DateTime @default(now())
  createdBy User @relation(fields: [createdById], references: [id])
  createdById String

  @@map("tag")
}
